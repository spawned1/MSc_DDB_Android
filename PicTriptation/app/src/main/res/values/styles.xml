<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.Title">
        <item name="android:textSize">30sp</item>
    </style>


    <style name="map_marker">
    </style>
    <style name="map_marker.title">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Trips">

    </style>

    <style name="Trips.Title">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Trips.Image">

    </style>

    <style name="Button">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="ButtonRed">
        <item name="android:background">@color/colorRed</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="ButtonFoto">
        <item name="android:background">@color/colorGray</item>>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorWhite</item>

    </style>


    <style name="Label">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">24dp</item>
        <item name="android:layout_marginLeft">@dimen/paddingMedium</item>
        <item name="android:layout_marginRight">@dimen/paddingMedium</item>
    </style>

    <style name="Text">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">24dp</item>
        <item name="android:layout_marginLeft">@dimen/paddingMedium</item>
        <item name="android:layout_marginRight">@dimen/paddingMedium</item>
    </style>
    <style name="Text.SingleLine">
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
    </style>


</resources>
